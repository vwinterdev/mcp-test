{
  "buildCommand": "pnpm install && pnpm run build",
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  }
}
